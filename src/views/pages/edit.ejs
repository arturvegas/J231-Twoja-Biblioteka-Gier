<%- include('../partials/header') %>

<div id="form">
<h2>Edytuj grę</h2>
<form action="/edit/<%= game._id %>" method="POST"> 
    <label for="title">Tytuł:</label> <br>
    <input type="text" name="title" value="<%= game.title %>" maxlength="100" required> <br>
    <label for="developer">Developer:</label> <br>
    <input type="text" name="developer" value="<%= game.developer %>" maxlength="100" required> <br>
    <label for="year">Rok wydania:</label> <br>
    <input type="number" name="year" value="<%= game.year %>" min="1958" max="2050" required> <br> <br>
    <label for="desc">Opis:</label> <br>
    <textarea id="desc" name="desc" rows="5" cols="40" maxlength="1000" required><%= game.desc %></textarea> <br> <br>
    <label for="status">Status:</label> <br>
    <select id="status" name="status"> 
        <option value="Skończona" <%= game.status === 'Skończona' ? 'selected' : '' %>>Skończona</option>
        <option value="Nie skończona" <%= game.status === 'Nie skończona' ? 'selected' : '' %>>Nie skończona</option>
    </select><br><br>
    <button type="submit">Zapisz zmiany</button>
</form>
</div>

<%- include('../partials/footer') %>
